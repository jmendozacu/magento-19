<?xml version="1.0"?>
<config>
    <modules>
        <MyCompany_TechTalk>
            <version>0.1.0</version>
        </MyCompany_TechTalk>
    </modules>
    <frontend>
        <routers>
            <techtalk>
                <use>standard</use>
                <args>
                    <module>MyCompany_TechTalk</module>
                    <frontName>magetalk</frontName>
                </args>
            </techtalk>
        </routers>
        <layout>  <!-- New Section Added -->
            <updates>
                <techtalk>
                    <file>techtalk.xml</file> <!-- This is name of the layout file for this module -->
                </techtalk>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <techtalk>
                <class>MyCompany_TechTalk_Block</class>
            </techtalk>
        </blocks>
        <helpers>
                <lesson>
                    <class>MyCompany_TechTalk_Block</class>
                </lesson>
        </helpers>
        <models>
            <techtalk>
                <class>MyCompany_TechTalk_Model</class>
				<resourceModel>techtalk_resource</resourceModel>
            </techtalk>
			<techtalk_resource>
				<class>MyCompany_TechTalk_Model_Resource</class>
				<entities>
					<contact>
						<table>ain_contact</table>
					</contact>
                    <comments>
                        <table>comment</table>
                    </comments>
				</entities>
			</techtalk_resource>
        </models>
        <helpers>
            <techtalk>
                <class>MyCompany_TechTalk_Helper</class>
            </techtalk>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <my_techtalk before="Mage_Adminhtml">MyCompany_TechTalk_Adminhtml</my_techtalk>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>